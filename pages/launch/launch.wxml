<!-- 启动页 -->
<view class="launch-container">
  <!-- 渐变背景 -->
  <view class="gradient-bg"></view>
  
  <!-- 内容区域 -->
  <view class="content">
    <!-- 应用名称 -->
    <view class="app-title">股值通</view>
    
    <!-- 正常加载状态 -->
    <view wx:if="{{!loadError}}" class="loading-dots">
      <view class="dot dot-1"></view>
      <view class="dot dot-2"></view>
      <view class="dot dot-3"></view>
    </view>
    
    <!-- 加载失败状态 -->
    <view wx:else class="error-container">
      <text class="error-text">{{errorMsg}}</text>
      <view class="error-buttons">
        <button class="retry-btn" bindtap="onRetry">重试</button>
        <button class="skip-btn" bindtap="onSkip">跳过</button>
      </view>
    </view>
  </view>
</view>