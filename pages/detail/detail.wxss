/* pages/detail/detail.wxss */

/* 股票头部信息 */
.stock-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 24rpx;
  margin-bottom: 20rpx;
}

.stock-basic-info {
  flex: 1;
}

.stock-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.stock-code {
  font-size: 28rpx;
  color: #999;
}

.stock-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  background: #f0f0f0;
  border: none;
  border-radius: 8rpx;
  padding: 12rpx 20rpx;
  font-size: 26rpx;
  color: #666;
  transition: all 0.3s ease;
}

.action-btn.favorited {
  background: #ffe6e6;
  color: #ff4d4f;
}

.action-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
}

/* 统计信息 */
.stats-section {
  padding: 30rpx 24rpx;
  margin-bottom: 20rpx;
}

.stats-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}

.stat-item {
  text-align: center;
}

.stat-label {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.stat-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.stat-value.primary {
  color: #1296db;
  font-size: 32rpx;
}

.stat-value.success {
  color: #52c41a;
}

.stat-value.danger {
  color: #ff4d4f;
}

/* 时间范围选择 */
.period-selector {
  padding: 30rpx 24rpx;
  margin-bottom: 20rpx;
}

.period-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.period-buttons {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.period-btn {
  background: #f0f0f0;
  color: #666;
  border-radius: 25rpx;
  padding: 16rpx 24rpx;
  font-size: 28rpx;
  transition: all 0.3s ease;
}

.period-btn.active {
  background: #1296db;
  color: white;
}

/* 图表区域 */
.chart-section {
  padding: 30rpx 24rpx;
  margin-bottom: 20rpx;
}

.chart-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.chart-loading {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #999;
}

.loading-text-small {
  margin-left: 8rpx;
}

.chart-container {
  width: 100%;
  height: 400rpx;
}

ec-canvas {
  width: 100%;
  height: 100%;
}

/* 数据说明 */
.data-info {
  padding: 30rpx 24rpx;
  margin-bottom: 20rpx;
}

.info-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.info-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.info-item {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* 历史数据列表 */
.history-list {
  padding: 30rpx 24rpx;
  margin-bottom: 20rpx;
}

.list-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.history-items {
  max-height: 400rpx;
  overflow-y: auto;
}

.history-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.history-item:last-child {
  border-bottom: none;
}

.history-date {
  font-size: 28rpx;
  color: #666;
}

.history-value {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
}

.loading-text {
  margin-top: 20rpx;
  color: #999;
  font-size: 28rpx;
}