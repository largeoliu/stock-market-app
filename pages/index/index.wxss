/* pages/index/index.wxss */

/* 搜索栏 */
.search-bar {
  margin-bottom: 30rpx;
}

.search-input {
  display: flex;
  align-items: center;
  background: white;
  border-radius: 50rpx;
  padding: 20rpx 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.search-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
}

.search-placeholder {
  color: #999;
  font-size: 30rpx;
}

/* 区块样式 */
.section {
  margin-bottom: 40rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 0 10rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.clear-btn {
  color: #1296db;
  font-size: 28rpx;
}

/* 股票列表 */
.stock-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.stock-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 24rpx;
  transition: all 0.3s ease;
}

.stock-item:active {
  transform: scale(0.98);
  background-color: #f8f8f8;
}

.stock-info {
  flex: 1;
}

.stock-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.stock-code {
  font-size: 26rpx;
  color: #999;
}

.stock-price {
  text-align: right;
}

.price {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.price-change {
  font-size: 26rpx;
}

/* 最近搜索 */
.recent-list {
  background: white;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.recent-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.recent-item:last-child {
  border-bottom: none;
}

.recent-item:active {
  background-color: #f8f8f8;
}

.recent-info {
  flex: 1;
}

.recent-name {
  font-size: 30rpx;
  color: #333;
  margin-right: 20rpx;
}

.recent-code {
  font-size: 26rpx;
  color: #999;
}

.arrow-icon {
  font-size: 24rpx;
  color: #999;
}

/* 功能介绍 */
.feature-intro {
  padding: 30rpx 24rpx;
}

.feature-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.feature-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.feature-item {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #666;
}

.feature-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}