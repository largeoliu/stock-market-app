/* 全局样式 - Longbridge风格 */
page {
  background-color: #F5F7FA;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'PingFang SC', 'Helvetica Neue', Arial, sans-serif;
  color: #1A1D24;
}

.container {
  padding: 0;
  min-height: 100vh;
}

/* 卡片样式 - 大气风格 */
.card {
  background: #FFFFFF;
  border-radius: 0;
  border: none;
  border-bottom: 1rpx solid #F0F2F5;
  margin-bottom: 0;
  padding: 48rpx 32rpx;
  position: relative;
  overflow: hidden;
}

.card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 3rpx;
  background: linear-gradient(90deg, rgba(0, 194, 255, 0.8) 0%, rgba(0, 194, 255, 0) 100%);
}

/* 按钮样式 - Longbridge风格 */
.btn-primary {
  background: linear-gradient(135deg, #00C2FF 0%, #0081FF 100%);
  color: white;
  border-radius: 12rpx;
  padding: 20rpx 40rpx;
  border: none;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 24rpx rgba(0, 194, 255, 0.3);
  transition: all 0.3s ease;
}

.btn-primary:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 194, 255, 0.3);
}

.btn-secondary {
  background-color: #F5F7FA;
  color: #1A1D24;
  border-radius: 12rpx;
  padding: 20rpx 40rpx;
  border: 1rpx solid #E5E8EB;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.btn-secondary:active {
  background-color: #E5E8EB;
}

/* 文本样式 - Longbridge风格 */
.text-primary {
  color: #00C2FF;
  font-weight: 600;
}

.text-success {
  color: #00D084;
  font-weight: 600;
}

.text-danger {
  color: #FF4757;
  font-weight: 600;
}

.text-muted {
  color: #6B7280;
  font-size: 28rpx;
}

.text-white {
  color: #FFFFFF;
}

.text-secondary {
  color: #9CA3AF;
}

/* 加载动画 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.loading-text {
  margin-left: 20rpx;
  color: #999;
  font-size: 28rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
  color: #999;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

/* 列表样式 - Longbridge风格 */
.list-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #2A2E36;
  transition: all 0.3s ease;
}

.list-item:hover {
  background-color: rgba(0, 194, 255, 0.05);
}

.list-item:last-child {
  border-bottom: none;
}

.list-item-content {
  flex: 1;
}

.list-item-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
  color: #1A1D24;
}

.list-item-desc {
  font-size: 28rpx;
  color: #6B7280;
}