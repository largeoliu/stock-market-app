/* pages/detail/detail.wxss - Longbridge风格 */

/* 股票头部信息 */
.stock-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 60rpx 32rpx;
  margin-bottom: 0;
  background: linear-gradient(135deg, rgba(0, 194, 255, 0.08) 0%, rgba(0, 129, 255, 0.03) 100%);
  position: relative;
  overflow: hidden;
}

.stock-header::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #00C2FF 0%, #0081FF 100%);
}

.stock-basic-info {
  flex: 1;
}

.stock-name {
  font-size: 56rpx;
  font-weight: 700;
  color: #1A1D24;
  margin-bottom: 16rpx;
  letter-spacing: 1rpx;
}

.stock-code {
  font-size: 32rpx;
  color: #6B7280;
  font-weight: 500;
}

.stock-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  background: #F5F7FA;
  border: 1rpx solid #E5E8EB;
  border-radius: 12rpx;
  padding: 16rpx 24rpx;
  font-size: 26rpx;
  color: #6B7280;
  transition: all 0.3s ease;
  font-weight: 500;
}

.action-btn.favorited {
  background: linear-gradient(135deg, rgba(255, 71, 87, 0.2) 0%, rgba(255, 71, 87, 0.1) 100%);
  border-color: #FF4757;
  color: #FF4757;
}

.action-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
}

/* 统计信息 */
.stats-section {
  padding: 40rpx 32rpx;
  margin-bottom: 24rpx;
  position: relative;
}

.stats-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1A1D24;
  margin-bottom: 32rpx;
  letter-spacing: 0.5rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  gap: 24rpx;
  margin-top: 40rpx;
}

.stat-item {
  text-align: center;
  padding: 28rpx 20rpx;
  background: rgba(0, 194, 255, 0.05);
  border-radius: 16rpx;
  border: 1rpx solid rgba(0, 194, 255, 0.15);
  transition: all 0.3s ease;
}

.stat-item:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 194, 255, 0.1);
}

.stat-label {
  font-size: 28rpx;
  color: #6B7280;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.stat-value {
  font-size: 32rpx;
  font-weight: 700;
  color: #1A1D24;
}

.stat-value.primary {
  color: #00C2FF;
  font-size: 36rpx;
  text-shadow: 0 0 20rpx rgba(0, 194, 255, 0.3);
}

.stat-value.success {
  color: #FF4757;
  text-shadow: 0 0 20rpx rgba(255, 71, 87, 0.3);
}

.stat-value.danger {
  color: #00D084;
  text-shadow: 0 0 20rpx rgba(0, 208, 132, 0.3);
}

/* 时间范围选择 */
.period-selector {
  padding: 40rpx 32rpx;
  margin-bottom: 24rpx;
}

/* 当前市值 */
.current-market-cap {
  text-align: center;
  margin-bottom: 48rpx;
  padding-bottom: 32rpx;
  border-bottom: 1rpx solid #E5E8EB;
}

.market-cap-label {
  font-size: 32rpx;
  color: #6B7280;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.market-cap-value {
  font-size: 64rpx;
  font-weight: 700;
  color: #00C2FF;
  text-shadow: 0 0 20rpx rgba(0, 194, 255, 0.3);
  letter-spacing: 1rpx;
}

.period-title {
  font-size: 38rpx;
  font-weight: 700;
  color: #1A1D24;
  margin-bottom: 32rpx;
  letter-spacing: 0.5rpx;
}

.period-buttons {
  display: flex;
  gap: 12rpx;
  overflow-x: auto;
  white-space: nowrap;
  -webkit-overflow-scrolling: touch;
  padding-bottom: 4rpx;
}

.period-btn {
  background: #F5F7FA;
  color: #6B7280;
  border: 1rpx solid #E5E8EB;
  border-radius: 24rpx;
  padding: 20rpx 32rpx;
  font-size: 32rpx;
  font-weight: 600;
  transition: all 0.3s ease;
  flex-shrink: 0;
  text-align: center;
  min-width: 100rpx;
}

.period-btn:active {
  transform: scale(0.95);
}

.period-btn.active {
  background: linear-gradient(135deg, #00C2FF 0%, #0081FF 100%);
  color: white;
  border-color: #00C2FF;
  box-shadow: 0 8rpx 24rpx rgba(0, 194, 255, 0.3);
  transform: translateY(-2rpx);
}

/* 图表区域 */
.chart-section {
  padding: 24rpx 16rpx;
  margin-bottom: 0;
  background: linear-gradient(135deg, rgba(0, 194, 255, 0.02) 0%, rgba(0, 129, 255, 0.005) 100%);
  border: none;
}

.chart-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 42rpx;
  font-weight: 700;
  color: #1A1D24;
  margin-bottom: 40rpx;
  letter-spacing: 0.5rpx;
}

.chart-loading {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #6B7280;
}

.loading-text-small {
  margin-left: 8rpx;
}

.chart-container {
  width: 100%;
  height: 600rpx;
  border-radius: 16rpx;
  overflow: hidden;
  background: #FAFBFC;
}

ec-canvas {
  width: 100%;
  height: 100%;
}

/* 数据说明 */
.data-info {
  padding: 40rpx 32rpx;
  margin-bottom: 24rpx;
  background: #FAFBFC;
  border: 1rpx solid #E5E8EB;
}

.info-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1A1D24;
  margin-bottom: 24rpx;
  letter-spacing: 0.5rpx;
}

.info-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.info-item {
  font-size: 26rpx;
  color: #6B7280;
  line-height: 1.8;
  padding-left: 20rpx;
  position: relative;
}

.info-item::before {
  content: '•';
  position: absolute;
  left: 0;
  color: #00C2FF;
  font-weight: bold;
}

/* 历史数据列表 */
.history-list {
  padding: 40rpx 32rpx;
  margin-bottom: 24rpx;
}

.list-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1A1D24;
  margin-bottom: 24rpx;
  letter-spacing: 0.5rpx;
}

.history-items {
  max-height: 400rpx;
  overflow-y: auto;
}

.history-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #E5E8EB;
  transition: all 0.3s ease;
}

.history-item:hover {
  background-color: rgba(0, 194, 255, 0.05);
  padding-left: 16rpx;
  padding-right: 16rpx;
  margin-left: -16rpx;
  margin-right: -16rpx;
  border-radius: 8rpx;
}

.history-item:last-child {
  border-bottom: none;
}

.history-date {
  font-size: 28rpx;
  color: #6B7280;
  font-weight: 500;
}

.history-value {
  font-size: 28rpx;
  font-weight: 700;
  color: #1A1D24;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
}

.loading-text {
  margin-top: 20rpx;
  color: #6B7280;
  font-size: 28rpx;
  font-weight: 500;
}