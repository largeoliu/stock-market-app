/* 骨架屏样式 */
.skeleton-container {
  width: 100%;
  background-color: #fff;
}

/* 骨架屏动画 */
@keyframes skeleton-loading {
  0% {
    background-position: -200rpx 0;
  }
  100% {
    background-position: calc(200rpx + 100%) 0;
  }
}

/* 基础骨架屏元素 */
.skeleton-base {
  background: linear-gradient(90deg, #f2f2f2 25%, #e6e6e6 50%, #f2f2f2 75%);
  background-size: 400rpx 100%;
  animation: skeleton-loading 1.4s ease-in-out infinite;
  border-radius: 8rpx;
}

/* 股票列表骨架屏 */
.skeleton-stock-list {
  padding: 20rpx;
}

.skeleton-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.skeleton-item:last-child {
  border-bottom: none;
}

.skeleton-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  background: linear-gradient(90deg, #f2f2f2 25%, #e6e6e6 50%, #f2f2f2 75%);
  background-size: 400rpx 100%;
  animation: skeleton-loading 1.4s ease-in-out infinite;
}

.skeleton-content {
  flex: 1;
}

.skeleton-title {
  width: 160rpx;
  height: 32rpx;
  margin-bottom: 16rpx;
  background: linear-gradient(90deg, #f2f2f2 25%, #e6e6e6 50%, #f2f2f2 75%);
  background-size: 400rpx 100%;
  animation: skeleton-loading 1.4s ease-in-out infinite;
  border-radius: 4rpx;
}

.skeleton-subtitle {
  width: 120rpx;
  height: 24rpx;
  background: linear-gradient(90deg, #f2f2f2 25%, #e6e6e6 50%, #f2f2f2 75%);
  background-size: 400rpx 100%;
  animation: skeleton-loading 1.4s ease-in-out infinite;
  border-radius: 4rpx;
}

.skeleton-number {
  width: 100rpx;
  height: 32rpx;
  background: linear-gradient(90deg, #f2f2f2 25%, #e6e6e6 50%, #f2f2f2 75%);
  background-size: 400rpx 100%;
  animation: skeleton-loading 1.4s ease-in-out infinite;
  border-radius: 4rpx;
}

/* 图表骨架屏 */
.skeleton-chart {
  padding: 32rpx;
}

.skeleton-chart-title {
  width: 200rpx;
  height: 40rpx;
  margin-bottom: 32rpx;
  background: linear-gradient(90deg, #f2f2f2 25%, #e6e6e6 50%, #f2f2f2 75%);
  background-size: 400rpx 100%;
  animation: skeleton-loading 1.4s ease-in-out infinite;
  border-radius: 4rpx;
}

.skeleton-chart-body {
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  height: 300rpx;
  margin-bottom: 32rpx;
  padding: 0 20rpx;
}

.skeleton-chart-line {
  width: 40rpx;
  background: linear-gradient(90deg, #f2f2f2 25%, #e6e6e6 50%, #f2f2f2 75%);
  background-size: 400rpx 100%;
  animation: skeleton-loading 1.4s ease-in-out infinite;
  border-radius: 4rpx 4rpx 0 0;
}

.skeleton-chart-legend {
  display: flex;
  justify-content: center;
  gap: 40rpx;
}

.skeleton-legend-item {
  width: 80rpx;
  height: 24rpx;
  background: linear-gradient(90deg, #f2f2f2 25%, #e6e6e6 50%, #f2f2f2 75%);
  background-size: 400rpx 100%;
  animation: skeleton-loading 1.4s ease-in-out infinite;
  border-radius: 4rpx;
}

/* 搜索结果骨架屏 */
.skeleton-search {
  padding: 0 32rpx;
}

.skeleton-search-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.skeleton-search-item:last-child {
  border-bottom: none;
}

.skeleton-search-content {
  flex: 1;
}

.skeleton-search-title {
  width: 180rpx;
  height: 36rpx;
  margin-bottom: 12rpx;
  background: linear-gradient(90deg, #f2f2f2 25%, #e6e6e6 50%, #f2f2f2 75%);
  background-size: 400rpx 100%;
  animation: skeleton-loading 1.4s ease-in-out infinite;
  border-radius: 4rpx;
}

.skeleton-search-code {
  width: 120rpx;
  height: 28rpx;
  background: linear-gradient(90deg, #f2f2f2 25%, #e6e6e6 50%, #f2f2f2 75%);
  background-size: 400rpx 100%;
  animation: skeleton-loading 1.4s ease-in-out infinite;
  border-radius: 4rpx;
}

.skeleton-search-price {
  text-align: right;
}

.skeleton-price-main {
  width: 120rpx;
  height: 36rpx;
  margin-bottom: 8rpx;
  margin-left: auto;
  background: linear-gradient(90deg, #f2f2f2 25%, #e6e6e6 50%, #f2f2f2 75%);
  background-size: 400rpx 100%;
  animation: skeleton-loading 1.4s ease-in-out infinite;
  border-radius: 4rpx;
}

.skeleton-price-change {
  width: 100rpx;
  height: 28rpx;
  margin-left: auto;
  background: linear-gradient(90deg, #f2f2f2 25%, #e6e6e6 50%, #f2f2f2 75%);
  background-size: 400rpx 100%;
  animation: skeleton-loading 1.4s ease-in-out infinite;
  border-radius: 4rpx;
}

/* 详情页骨架屏 */
.skeleton-detail {
  padding: 32rpx;
}

.skeleton-detail-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.skeleton-stock-name {
  width: 240rpx;
  height: 48rpx;
  margin: 0 auto 16rpx;
  background: linear-gradient(90deg, #f2f2f2 25%, #e6e6e6 50%, #f2f2f2 75%);
  background-size: 400rpx 100%;
  animation: skeleton-loading 1.4s ease-in-out infinite;
  border-radius: 4rpx;
}

.skeleton-stock-code {
  width: 160rpx;
  height: 32rpx;
  margin: 0 auto;
  background: linear-gradient(90deg, #f2f2f2 25%, #e6e6e6 50%, #f2f2f2 75%);
  background-size: 400rpx 100%;
  animation: skeleton-loading 1.4s ease-in-out infinite;
  border-radius: 4rpx;
}

.skeleton-tabs {
  display: flex;
  justify-content: center;
  gap: 40rpx;
  margin-bottom: 40rpx;
}

.skeleton-tab {
  width: 120rpx;
  height: 40rpx;
  background: linear-gradient(90deg, #f2f2f2 25%, #e6e6e6 50%, #f2f2f2 75%);
  background-size: 400rpx 100%;
  animation: skeleton-loading 1.4s ease-in-out infinite;
  border-radius: 20rpx;
}

.skeleton-detail-chart {
  margin-bottom: 40rpx;
}

.skeleton-chart-area {
  width: 100%;
  height: 400rpx;
  background: linear-gradient(90deg, #f2f2f2 25%, #e6e6e6 50%, #f2f2f2 75%);
  background-size: 400rpx 100%;
  animation: skeleton-loading 1.4s ease-in-out infinite;
  border-radius: 8rpx;
}

.skeleton-stats {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 32rpx;
}

.skeleton-stat-item {
  text-align: center;
}

.skeleton-stat-label {
  width: 100rpx;
  height: 28rpx;
  margin: 0 auto 12rpx;
  background: linear-gradient(90deg, #f2f2f2 25%, #e6e6e6 50%, #f2f2f2 75%);
  background-size: 400rpx 100%;
  animation: skeleton-loading 1.4s ease-in-out infinite;
  border-radius: 4rpx;
}

.skeleton-stat-value {
  width: 120rpx;
  height: 32rpx;
  margin: 0 auto;
  background: linear-gradient(90deg, #f2f2f2 25%, #e6e6e6 50%, #f2f2f2 75%);
  background-size: 400rpx 100%;
  animation: skeleton-loading 1.4s ease-in-out infinite;
  border-radius: 4rpx;
}

/* 通用文本骨架屏 */
.skeleton-text {
  padding: 20rpx;
}

.skeleton-text-line {
  height: 32rpx;
  margin-bottom: 16rpx;
  background: linear-gradient(90deg, #f2f2f2 25%, #e6e6e6 50%, #f2f2f2 75%);
  background-size: 400rpx 100%;
  animation: skeleton-loading 1.4s ease-in-out infinite;
  border-radius: 4rpx;
}

.skeleton-text-line:last-child {
  margin-bottom: 0;
}