/* 启动页样式 */
.launch-container {
  position: fixed;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

/* 渐变背景 */
.gradient-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #00C2FF 0%, #0081FF 100%);
  z-index: 0;
}

/* 内容区域 */
.content {
  position: relative;
  z-index: 1;
  text-align: center;
  animation: fadeIn 0.5s ease-out;
}

/* 应用名称 */
.app-title {
  font-size: 72rpx;
  font-weight: bold;
  color: #FFFFFF;
  letter-spacing: 4rpx;
  margin-bottom: 80rpx;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  animation: titleSlideDown 0.6s ease-out;
}

/* 加载动画容器 */
.loading-dots {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 16rpx;
}

/* 加载点 */
.dot {
  width: 16rpx;
  height: 16rpx;
  background-color: #FFFFFF;
  border-radius: 50%;
  opacity: 0.8;
  animation: dotBounce 1.4s infinite ease-in-out;
}

.dot-1 {
  animation-delay: -0.32s;
}

.dot-2 {
  animation-delay: -0.16s;
}

.dot-3 {
  animation-delay: 0s;
}

/* 动画定义 */
@keyframes fadeIn {
  0% {
    opacity: 0;
  }
  100% {
    opacity: 1;
  }
}

@keyframes titleSlideDown {
  0% {
    opacity: 0;
    transform: translateY(-30rpx);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes dotBounce {
  0%, 80%, 100% {
    transform: scale(1);
    opacity: 0.8;
  }
  40% {
    transform: scale(1.3);
    opacity: 1;
  }
}

/* 错误状态样式 */
.error-container {
  margin-top: 60rpx;
  text-align: center;
}

.error-text {
  color: rgba(255, 255, 255, 0.9);
  font-size: 28rpx;
  margin-bottom: 40rpx;
  display: block;
}

.error-buttons {
  display: flex;
  justify-content: center;
  gap: 30rpx;
}

.retry-btn, .skip-btn {
  padding: 16rpx 48rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
}

.retry-btn {
  background-color: #FFFFFF;
  color: #00C2FF;
}

.skip-btn {
  background-color: transparent;
  color: #FFFFFF;
  border: 2rpx solid rgba(255, 255, 255, 0.5);
}