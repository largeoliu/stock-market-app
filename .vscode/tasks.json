{
  "version": "2.0.0",
  "tasks": [
     {
            "label": "merge-dev-to-main-and-push",
            "type": "shell",
            "command": "/bin/bash",
            "args": [
                "-c",
                "set -e && echo '切换到main分支' && git checkout main && echo '合并dev分支到main分支' && git merge dev && echo '推送到远程main分支' && git push origin main && echo '切换回dev分支' && git checkout dev && echo '已完成：合并dev到main并推送'"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
    {
      "label": "微信小程序：上传",
      "type": "shell",
      "command": "node",
      "args": ["scripts/wx-upload.js"],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": [],
      "detail": "上传微信小程序到后台，使用默认版本号递增"
    },
    {
      "label": "微信小程序：上传（指定版本）",
      "type": "shell",
      "command": "node",
      "args": [
        "scripts/wx-upload.js",
        "--version",
        "${input:versionInput}",
        "--desc",
        "${input:descInput}"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": [],
      "detail": "上传微信小程序到后台，手动指定版本号和描述"
    },
    {
      "label": "微信小程序：预览",
      "type": "shell",
      "command": "node",
      "args": ["scripts/wx-upload.js", "--preview"],
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": [],
      "detail": "生成微信小程序预览二维码"
    },
    {
      "label": "微信小程序：检查配置",
      "type": "shell",
      "command": "node",
      "args": ["scripts/wx-upload.js", "--check"],
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": [],
      "detail": "检查微信开发者工具CLI和项目配置"
    },
    {
      "label": "微信小程序：上传+提交Git",
      "type": "shell",
      "command": "node",
      "args": ["scripts/wx-upload.js", "--auto-git"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": [],
      "detail": "上传小程序并自动提交到Git（默认任务）"
    },
    {
      "label": "微信小程序：仅上传",
      "type": "shell",
      "command": "node",
      "args": ["scripts/wx-upload.js", "--no-git"],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": [],
      "detail": "只上传小程序，不提交Git"
    }
  ],
  "inputs": [
    {
      "id": "versionInput",
      "description": "输入版本号 (例如: 1.0.1)",
      "default": "1.0.0",
      "type": "promptString"
    },
    {
      "id": "descInput", 
      "description": "输入版本描述",
      "default": "版本更新",
      "type": "promptString"
    }
  ]
}