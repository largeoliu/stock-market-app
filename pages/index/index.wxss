/* pages/index/index.wxss */

/* 安全区域 */
.safe-area-top {
  background: #F5F7FA;
  width: 100%;
}

/* 标题栏 */
.header {
  padding: 40rpx 32rpx 20rpx;
  text-align: center;
}

.header-title {
  font-size: 44rpx;
  font-weight: 700;
  color: #1A1D24;
  letter-spacing: 2rpx;
  position: relative;
}

.header-title::after {
  content: '';
  position: absolute;
  bottom: -16rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 80rpx;
  height: 6rpx;
  background: linear-gradient(90deg, #00C2FF 0%, #0081FF 100%);
  border-radius: 3rpx;
}

/* 搜索栏 */
.search-bar {
  margin-bottom: 30rpx;
}

.search-input {
  display: flex;
  align-items: center;
  background: white;
  border-radius: 50rpx;
  padding: 20rpx 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.search-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
}

.search-placeholder {
  color: #999;
  font-size: 30rpx;
}

/* 区块样式 */
.section {
  margin-bottom: 40rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 0 10rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.clear-btn {
  color: #1296db;
  font-size: 28rpx;
}

/* 最近搜索 */
.recent-list {
  background: white;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.recent-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.recent-item:last-child {
  border-bottom: none;
}

.recent-item:active {
  background-color: #f8f8f8;
}

.recent-info {
  flex: 1;
}

.recent-name {
  font-size: 30rpx;
  color: #333;
  margin-right: 20rpx;
}

.recent-code {
  font-size: 26rpx;
  color: #999;
}

.arrow-icon {
  font-size: 24rpx;
  color: #999;
}

