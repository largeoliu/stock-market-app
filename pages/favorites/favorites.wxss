/* pages/favorites/favorites.wxss */

/* 操作栏 */
.action-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 10rpx;
  margin-bottom: 20rpx;
}

.stock-count {
  font-size: 28rpx;
  color: #666;
}

.clear-all-btn {
  color: #ff4d4f;
  font-size: 28rpx;
}

/* 收藏列表 */
.favorites-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.favorite-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 24rpx;
  transition: all 0.3s ease;
}

.favorite-item:active {
  transform: scale(0.98);
  background-color: #f8f8f8;
}

.stock-info {
  flex: 1;
}

.stock-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.stock-detail {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.stock-code {
  font-size: 26rpx;
  color: #666;
  margin-right: 16rpx;
}

.stock-market {
  font-size: 24rpx;
  color: #999;
  background: #f0f0f0;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.favorite-time {
  font-size: 24rpx;
  color: #999;
}

.favorite-actions {
  display: flex;
  align-items: center;
}

.delete-btn {
  padding: 16rpx;
  border-radius: 8rpx;
  transition: all 0.3s ease;
}

.delete-btn:active {
  background-color: #ffe6e6;
}

.delete-icon {
  font-size: 24rpx;
  opacity: 0.6;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  display: block;
}

.empty-title {
  display: block;
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
}

.empty-desc {
  display: block;
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.empty-action {
  display: inline-block;
}

/* 使用提示 */
.usage-tips {
  padding: 30rpx 24rpx;
}

.tips-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.tips-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.tip-item {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
}

.loading-text {
  margin-top: 20rpx;
  color: #999;
  font-size: 28rpx;
}